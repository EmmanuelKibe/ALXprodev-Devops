#!/bin/bash

# List of Pokémon to fetch
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Directory to save JSON files
OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

# Error log file
ERROR_FILE="errors.txt"
> "$ERROR_FILE"  # Clear previous errors

# Function to fetch Pokémon data with retries
fetch_pokemon() {
    local name="$1"
    local retries=3
    local delay=2
    local success=0

    for ((i=1; i<=retries; i++)); do
        echo "Fetching data for $name... (Attempt $i)"
        http_code=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/$name.json" "https://pokeapi.co/api/v2/pokemon/$name")

        if [ "$http_code" -eq 200 ]; then
            echo "Saved data to $OUTPUT_DIR/$name.json ✅"
            success=1
            break
        else
            echo "Failed to fetch $name (HTTP $http_code), retrying in $delay seconds..."
            sleep $delay
        fi
    done

    if [ $success -eq 0 ]; then
        echo "Failed to fetch $name after $retries attempts." >> "$ERROR_FILE"
    fi
}

# Loop through all Pokémon
for pokemon in "${POKEMONS[@]}"; do
    fetch_pokemon "$pokemon"
    sleep 1  # Delay between requests to avoid rate limiting
done
