#!/bin/bash

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Ensure the directory exists
if [ ! -d "$INPUT_DIR" ]; then
    echo "Error: Directory '$INPUT_DIR' does not exist."
    exit 1
fi

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through all JSON files
for file in "$INPUT_DIR"/*.json; do
    # Extract fields using jq
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert decimeters → meters, hectograms → kilograms using awk
    height_m=$(echo "$height" | awk '{printf "%.1f", $1 / 10}')
    weight_kg=$(echo "$weight" | awk '{printf "%.1f", $1 / 10}')

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo ""
echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Display CSV content
cat "$OUTPUT_FILE"
echo ""

# Compute averages using awk
awk -F',' '
    NR>1 {
        height_sum += $2;
        weight_sum += $3;
        count++;
    }
    END {
        printf "Average Height: %.2f m\n", height_sum / count;
        printf "Average Weight: %.2f kg\n", weight_sum / count;
    }
' "$OUTPUT_FILE"
