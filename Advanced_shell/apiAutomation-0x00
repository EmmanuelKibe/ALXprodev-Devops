#!/bin/bash

# URL for Pikachu data
URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" "$URL" -o "$OUTPUT_FILE")

# Extract the HTTP status code
status_code=${response:(-3)}

# Check if request was successful
if [ "$status_code" -ne 200 ]; then
    echo "Request failed with status code: $status_code" >> "$ERROR_FILE"
    # Remove partial data.json if request failed
    rm -f "$OUTPUT_FILE"
else
    echo "Pikachu data saved to $OUTPUT_FILE"
fi
